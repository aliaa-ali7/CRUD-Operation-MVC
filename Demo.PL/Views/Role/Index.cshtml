@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Count()>0)
{
    <a asp-action="Create" class="btn btn-success">Add New Role</a>
    <br />
    <div class="row mt-5 mb-3">
        <form asp-action="Index" class="row">
            <div class="col-8">
                <input type="text" name="SearchValue" placeholder="Role's Name">
            </div>
            <div class="col-4">
                <input type="submit" value="Search">

            </div>
        </form>
    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R=>R.Id)</td>
                <td>@Html.DisplayNameFor(R=>R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach(var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    
                    <partial name ="_ButtonsPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>There Is No Roles</div>
}
